@model Site.Core.DataModel.Model.UserModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<!-- Color CSS -->
<link rel="stylesheet" href="~/Areas/Administrator/css/themes.css">
<link rel="stylesheet" href="~/Content/form.css">
<!-- jQuery UI -->
<script src="~/Areas/Administrator/js/plugins/jquery-ui/jquery-ui.js"></script>
<!-- Form -->
<script src="~/Areas/Administrator/js/plugins/form/jquery.form.min.js"></script>

<div class="col-sm-9 page-content">
    <div class="box box-bordered box-color">
        <div class="box-title">
            <h3>
                <i class="fa fa-edit"></i>User Login
            </h3>
        </div>
        <div class="box-content nopadding">
            @using (Html.BeginForm("UserLogin", "Home", FormMethod.Post, new { @class = "form-horizontal form-bordered" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="textfield" class="control-label col-sm-2">User Name</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(Model => Model.UserName, new { @class = "form-control", placeholder = "User Name" })
                        @Html.ValidationMessageFor(Model => Model.UserName)
                    </div>
                </div>
                <div class="form-group">
                    <label for="textfield" class="control-label col-sm-2">Password</label>
                    <div class="col-sm-10">
                        @Html.PasswordFor(Model => Model.Password, new { @class = "form-control", placeholder = "Password" })
                    </div>
                </div>
                <div class="forget">
                    <a href="#">
                        <span>Forgot password?</span>
                    </a>
                    <a href='@Url.Action("Register", "Home")'>
                        <span>Register</span>
                    </a>
                </div>
                <div class="form-actions col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <a href='/' class="btn btn-info">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>
