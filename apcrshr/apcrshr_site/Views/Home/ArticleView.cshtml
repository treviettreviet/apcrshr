@model IList<Site.Core.DataModel.Model.ArticleModel>
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="col-md-9 page-content">
    <!-- Classic Heading -->
    <h4 class="classic-title"><span>@ViewBag.Title</span></h4>

    @if (Model != null)
    {
        if (Model.Count > 1)
        {
            int i = 1;
            
            <div class="blog-post standard-post">
                <!-- Post Content -->
                <div class="post-content">
                    <div class="post-type"><i class="icon-pencil-4"></i></div>
                    <h2><a href="#">@Model[0].Title</a></h2>
                    <ul class="post-meta">
                        <li>@Model[0].CreatedDate.ToString("dddd, d MMMM, yyyy", new System.Globalization.CultureInfo(System.Threading.Thread.CurrentThread.CurrentUICulture.Name))</li>
                        <li><a href="#">Posted by</a>, <a href="#">ACPRSHR</a></li>
                    </ul>
                    @Html.Raw(Model[0].Contents)
                </div>
            </div>
        
            for (; i < Model.Count; i++)
            {
                
            }
        }
    }
</div>
