@{
    ViewBag.Title = "Home Page";
}

<!-- Start slider -->
<div class="touch-slider" data-slider-navigation="true" data-slider-pagination="true">
    <div class="item"><img alt="" src="~/Content/upload/images/my_khe.jpg" style="width:100%; height:371px;"></div>
    <div class="item"><img alt="" src="~/Content/upload/images/hoi_an.jpg" style="width:100%; height:371px;"></div>
</div>
<!-- End slider -->
<!-- Divider Style 1 -->
<div class="hr1" style="margin-bottom:40px;"></div>

<div class="row">
    <div class="col-md-9 page-content">

        <!--Latest News-->
        <h4 class="classic-title"><span>Latest News</span></h4>

        <!-- Start Latest Posts -->
        <div class="latest-posts-classic">

            @if (ViewBag.TopNews != null)
            {
                IList<Site.Core.DataModel.Model.NewsModel> news = (IList<Site.Core.DataModel.Model.NewsModel>)ViewBag.TopNews;
                foreach (var item in news)
                {
                    <!-- Post 1 -->
                    <div class="post-row animated fadeIn delay-01" data-animation="fadeIn" data-animation-delay="01">
                        <div class="left-meta-post">
                            <img class="img-thumbnail image-text" style="float:left; width:150px;" alt="" src="@item.ThumbnailURL">
                        </div>
                        <h3 class="post-title"><a href='@Url.Action("ViewNews", "News", new { ActionURL = item.ActionURL})'>@item.Title</a></h3>
                        <div class="post-content">
                            <p>@item.ShortContent <a class="read-more" href='@Url.Action("ViewNews", "News", new { ActionURL = item.ActionURL })'>Read More</a></p>
                        </div>
                    </div>
                }
            }

        </div>
        <!-- End Latest Posts -->
        <!--End latest News-->
        <!-- Divider Style 1 -->
        <div class="hr1" style="margin-bottom:40px;"></div>

        <!--Latest News-->
        <h4 class="classic-title"><span>Video</span></h4>


        <!-- Start Post -->
@if (ViewBag.TopVideo != null)
{
    IList<Site.Core.DataModel.Model.VideoModel> videos = (IList<Site.Core.DataModel.Model.VideoModel>)ViewBag.TopVideo;
    foreach (var item in videos)
    {

                <div class="blog-post video-post">
                    <!-- Post Video -->
                    <div class="post-head">
                        <iframe width="800" height="450" src="@item.VideoURL" frameborder="0" allowfullscreen></iframe>
                    </div>
                    <!-- Post Content -->
                    <div class="post-content">
                        <div class="post-type"><i class="icon-video-3"></i></div>
                        <h2><a href="#">@item.Title</a></h2>
                        <ul class="post-meta">
                            <li>@item.CreatedDate</li>
                            <li><a href="#">Posted by</a>, <a href="#">@item.CreatedBy</a></li>
                        </ul>
                        <p>@item.Shortcontent</p>
                    </div>
                </div>
    }
}
        <!-- End Post -->


    </div>

    <!--Sidebar-->
    @Html.Partial("_PartialRightWidget")
    <!--End sidebar-->
</div>