@using apcrshr_site.Resources
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="col-md-9 page-content">
    @if (ViewBag.Error != null)
    {
        <br />
        <div class="alert alert-danger"><a class="close" data-dismiss="alert" href="#">×</a><strong></strong>@Resource.msg_invalidEmail</div>
    }
    @using (Html.BeginForm("SendPassword", "User", FormMethod.Post, new { @class = "form-validate" }))
    {
        @Html.AntiForgeryToken()
        <div id="categories-3" class="widget widget_categories profile">
            <div class="span10" id="reset_pass">
                <div class="container">
                    <p>@Resource.text_reset_password</p>
                    <div class="form-group">
                        <input type="text" name='email' class="textbox form-control" placeholder="Email" data-rule-required="true" data-rule-email="true" onfocus="this.value = '';" />
                        <input type="submit" value="@Resource.btn_reset_password" class='btn_style bg-forget' />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
