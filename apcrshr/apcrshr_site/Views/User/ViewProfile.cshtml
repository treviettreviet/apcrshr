                        formData.append("NewPassword", $("#NewPassword").val());
                        
                        $.ajax({
                            type: "POST",
                            url: '@Url.Action("ChangePassword", "User")',
                            data: formData,
                            dataType: 'json',
                            contentType: false,
                            processData: false,
                            success: function (response) {
                                //Timeout
                                if (response.ErrorCode == 2) {
                                    window.location = '@Url.Action("Login", "User")';
                                }
