                                            </div>
                                            <div class="plan-signup">
                                                <a href="@Url.Action("MakePayment", "User")" class="btn-system btn-small border-btn">Pay Now</a>
                                            </div>
                                        </div>
                                        <!-- End Pricing Table 3 -->

                                    </div>
                                    <!-- End Pricing Tables -->
                                }
                            }
