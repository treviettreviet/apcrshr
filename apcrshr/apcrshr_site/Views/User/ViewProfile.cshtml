                        {
                            var abstracts = (IList<Site.Core.DataModel.Model.UserSubmissionModel>)ViewBag.Abstracts;
                            if (abstracts != null && abstracts.Count > 0)
                            {
                                <ul>
                                    @foreach (var item in abstracts)
                                    {
                                        <li>@item.SubmissionNumber</li>
                                    }
                                </ul>
                            }
