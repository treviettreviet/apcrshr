<!--Sidebar-->
<div class="col-md-3 sidebar right-sidebar">

    <!-- Register Now Register -->
    <div class="widget widget-popular-posts">
        <h4></h4>
        <ul class="register">
            <li>
                <a class="main-button" href='@Url.Action("RegistrationForm", "Registration")' style="color: #FFF; font-size: 12px; font-weight: bold; width: 100%;">Register Now</a>
            </li>
            <li>
                <a class="main-button" href="#" style="color: #FFF; font-size: 12px; font-weight: bold; width: 100%;">Abstract Submission</a>
            </li>
        </ul>
    </div>

    <!--Member widget-->
    @if (Session["User-UserName"] != null)
    {
        <div id="categories-3" class="widget widget_categories profile">
            <div class="btn_style bg1">
                <h4>@apcrshr_site.Resources.Resource.text_myProfile</h4>
            </div>
            <div class="profile-box">
                <div class="profile-cover-image">
                    @*<img src="http://api.randomuser.me/0.3/portraits/men/2.jpg" />*@
                </div>
                <div class="profile-picture">
                    <img src="~/Content/images/default-avatar.png" />
                </div>
                <div class="profile-content">
                    <h2>
                        @(Session["User-UserName"].ToString().Length > 10 ? Session["User-UserName"].ToString().Substring(0, 10) + "..." : Session["User-UserName"].ToString())
                    </h2>
                    <div class="row span2" id="btn_action">
                        <a href="@Url.Action("ViewProfile", "User")">@apcrshr_site.Resources.Resource.button_viewProfile</a>
                        <a href='@Url.Action("Logout", "User")'>@apcrshr_site.Resources.Resource.button_logout</a>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Important Deadlines widget -->
    <div class="widget widget-popular-posts">
        <h4>@apcrshr_site.Resources.Resource.title_importantDeadline <span class="head-line"></span></h4>
        <ul>
            @{
                IList<Site.Core.DataModel.Model.ImportantDeadlineModel> deadlines = ((apcrshr_site.Controllers.BaseController)this.ViewContext.Controller).GetImportantDeadlines(10);
                if (deadlines != null)
                {
                    foreach (var item in deadlines)
                    {
                        <li>
                            <div class="widget-thumb-icon">
                                <i class="icon-beaker icon-mini-effect icon-effect-1"></i>
                            </div>
                            <div class="widget-content">
                                <h5><a href="#">@item.Title</a></h5>
                                <span style="Color: #D85D03; font-weight: bold; ">@item.Deadline.ToShortDateString()</span>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                    }
                }
            }
        </ul>
    </div>

    </div>
<!--End sidebar-->
