            <i class="fa fa-bars"></i>
        </a>
        <ul class='main-nav'>
            <li class='@(ViewBag.CurrentNode == "Home" ? "active" : "")'>
                <a href='@Url.Action("Index", "Admin")'>
                    <span>Trang Chủ</span>
                </a>
            </li>
            <li class='@(ViewBag.CurrentNode == "Article" ? "active" : "")'>
                <a href='@Url.Action("Index", "Article")'>
                    <span>Bài Viết</span>
                </a>
            </li>
            <li class='@(ViewBag.CurrentNode == "AdminNews" ? "active" : "")'>
                <a href='@Url.Action("Index", "AdminNews")'>
                    <span>Tin Tức</span>
                </a>
            </li>
            <li class='@(ViewBag.CurrentNode == "AdminMember" ? "active" : "")'>
                <a href="@Url.Action("Index","AdminUser")">
                    <span>Thành Viên</span>

