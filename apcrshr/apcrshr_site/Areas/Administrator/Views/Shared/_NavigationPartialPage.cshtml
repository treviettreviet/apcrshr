                <ul class="dropdown-menu pull-right">
                    <li>
                        <a href='@Url.Action("UpdateProfile", "Admin", new { adminID = Session["UserID"] })'>Cập Nhập</a>
                    </li>
                    <li>
                        <a href='@Url.Action("Logout", "Admin")'>Đăng Xuất</a>
                    </li>
                </ul>
            </div>
        </div>
