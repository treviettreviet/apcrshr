<div id="navigation">
    <div class="container-fluid">
        <a href="@Url.Action("Index", "Admin")" id="brand">Admin</a>
        <a href="#" class="toggle-nav" rel="tooltip" data-placement="bottom" title="Toggle navigation">
            <i class="fa fa-bars"></i>
        </a>
        <ul class='main-nav'>
            <li class='@(ViewBag.CurrentNode == "Home" ? "active" : "")'>
                <a href='@Url.Action("Index", "Admin")'>
                    <span>Trang Chủ</span>
                </a>
            </li>
            <li class='@(ViewBag.CurrentNode == "AdminNews" ? "active" : "")'>
                <a href='@Url.Action("Index", "AdminNews")'>
                    <span>Tin Tức</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index","AdminUser")">
                    <span>Thành Viên</span>

                </a>
            </li>
        </ul>
        <div class="user">
            <div class="dropdown">
                <a href="#" class='dropdown-toggle' data-toggle="dropdown">
                    @ViewBag.UserName
                    <img src="~/Areas/Administrator/img/demo/user157.png" alt="">
                </a>
                <ul class="dropdown-menu pull-right">
                    <li>
                        <a href='@Url.Action("UpdateProfile", "Admin", new { adminID = Session["UserID"] })'>Cập Nhập</a>
                    </li>
                    <li>
                        <a href='@Url.Action("Logout", "Admin")'>Đăng Xuất</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
