@using apcrshr_site.Resources
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutLoginPage.cshtml";
}

<div class="wrapper">
    <h2>
        <p>
            @Resource.text_reset_password
        </p>
    </h2>
    <div class="forgot-password-body">
        @if (ViewBag.Error != null)
        {
            <br />
            <div class="alert alert-danger"><a class="close" data-dismiss="alert" href="#">×</a><strong></strong>@Resource.msg_invalidEmail</div>
        }
        <h2></h2>
        @using (Html.BeginForm("SendPassword", "AdminHome", FormMethod.Post, new { @class = "form-validate" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="email controls">
                    <input type="text" name='email' placeholder="Email" class='form-control' data-rule-required="true" data-rule-email="true" onfocus="this.value = '';">
                </div>
            </div>
            <div class="submit">
                <input type="submit" value="@Resource.btn_reset_password" class='btn btn-primary'>
                <a href='@Url.Action("Login", "AdminHome")' class="btn btn-primary" style="margin-left:10px">Cancel</a>
            </div>
            if (ViewBag.Response != null)
            {
                Site.Core.DataModel.Response.AdminLoginResponse responseMsg = (Site.Core.DataModel.Response.AdminLoginResponse)ViewBag.Response;
                <br />
                <div class="alert @(responseMsg.ErrorCode == (int)Site.Core.DataModel.Enum.ErrorCode.None ? " alert-info" : " alert-danger")"><a class="close" data-dismiss="alert" href="#">×</a><strong></strong> @responseMsg.Message</div>
            }
        }
    </div>

</div>
